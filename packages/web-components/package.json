{
  "name": "@agoric/web-components",
  "description": "Webcomponents for Agoric dapps",
  "license": "MIT",
  "author": "Agoric",
  "version": "0.3.0",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "exit 0",
    "test": "node -e 'process.exit(process.env.SKIP_BROWSER_TESTS==\"true\" ? 0 : 1)' || web-test-runner --coverage",
    "test:c8": "exit 0",
    "test:xs": "exit 0",
    "test:watch": "web-test-runner --watch",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "run-s --continue-on-error lint:*",
    "lint:types": "tsc --maxNodeModuleJsDepth 4 -p jsconfig.json",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server --port 8100"
  },
  "dependencies": {
    "@agoric/assert": "^0.5.0",
    "@agoric/cache": "^0.2.0",
    "@agoric/casting": "^0.2.0",
    "@endo/captp": "^2.0.15",
    "@endo/marshal": "^0.7.5",
    "@endo/promise-kit": "^1.0.0",
    "@lit-labs/react": "^1.0.1",
    "lit": "^2.0.2",
    "robot3": "^0.2.19",
    "rollup-plugin-polyfill-node": "^0.9.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@endo/eventual-send": "^0.16.5",
    "@endo/init": "^0.5.49",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@web/dev-server": "^0.1.22",
    "@web/test-runner": "^0.13.23",
    "eslint": "^7.32.0",
    "eslint-plugin-lit": "^1.5.1",
    "eslint-plugin-lit-a11y": "^1.0.1",
    "eslint-plugin-wc": "^1.3.1",
    "lint-staged": "^10.5.4",
    "mock-socket": "^9.0.4",
    "sinon": "^12.0.1"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "@endo"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "prettier/prettier": "off"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
